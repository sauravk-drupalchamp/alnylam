{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}

	<div{{attributes.addClass(classes)}}>

		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set Componentbackground =  paragraph.field_background_color_code.value %}

		<div style="background:{{ Componentbackground }}; overflow:hidden;" class="partnering-together-box">
			<div style="width:{{ComponentWidth}}px; margin:auto;">
				{{ content.field_body }}
				{{content.field_heading_image_description_}}
			</div>
		</div>

	</div>
{% endblock paragraph %}
