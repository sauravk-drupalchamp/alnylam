{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>
		{% set ComponentWidth =  paragraph.field_set_width.value %}
		<section class="whole-video-with-content-area" style="width:{{ ComponentWidth }}px; margin:auto; padding:64px 0px;">
			<div class="video-with-conten-title">{{ content.field_heading_1 }}</div>
			<div class="video-with-content-box">
				{{ content.field_title_description_video_vi }}
			</div>
		</section>

	</div>
{% endblock paragraph %}
