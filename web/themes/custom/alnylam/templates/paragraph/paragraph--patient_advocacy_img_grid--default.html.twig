
{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>

		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set ComponentBackgroundColor =  paragraph.field_background_color_code.value %}

        <div id="patient-advocacy-alnylam" style="width:{{ComponentWidth}}px; margin:auto;">
            <h2 class="text-center">{{content.field_heading_1}}</h2>
            <div class="row">
                <div class="img-desc-advocacy">
                    {{content.field_image_description}}
                </div>
            </div>
        </div>

	</div>
  
{% endblock paragraph %}

