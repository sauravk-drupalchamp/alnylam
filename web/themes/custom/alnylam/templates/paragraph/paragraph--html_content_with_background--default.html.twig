{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>

		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set ComponentBackgroundColor =  paragraph.field_background_color_code.value %}

		<div id="html-content-background" style="width:{{ ComponentWidth }}px; margin:auto; padding:64px 48px; background-color: {{ ComponentBackgroundColor }} ;">
			<div class="row inner-block" ">
				{{content.field_html_content_bg}}
			</div>
		</div>

	</div>

{% endblock paragraph %}
