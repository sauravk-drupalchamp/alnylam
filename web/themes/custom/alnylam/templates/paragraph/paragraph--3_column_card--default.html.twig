{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>

		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set ComponentBackgroundColor =  paragraph.field_background_color_code.value %}
		<div class="three-column-card-content" style="background-color:{{ ComponentBackgroundColor }};">
			<div style="width:{{ ComponentWidth }}px; margin:auto; ">
				<div class="three-column-card-title">{{content.field_heading_1}}</div>
				<div class="three-column-card-box">{{ content.field_3_column_card }}</div>
			</div>
		</div>
	</div>
{% endblock paragraph %}
