{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>

		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set ComponentBackgroundColor =  paragraph.field_background_color_code.value %}

		<div id="whole-corporate-responsibility-area" style="background-color: {{ ComponentBackgroundColor }} ;">
			<div class="inner-block" style="width:{{ ComponentWidth }}px; margin:auto; padding:64px 0px;">

				<div class="row">
					<div class="col-sm-6 icon-section">
						{{content.field_icons}}
					</div>
					<div class="col-sm-6 content-section">
						{{content.field_body}}
					</div>
				</div>

			</div>
		</div>
	</div>
{% endblock paragraph %}
