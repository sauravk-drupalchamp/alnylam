{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}
{% if paragraph.field_border_bottom.value == true %}
	{% set BottomBorderClass = "bottom-border" %}
{% endif %}
{% block paragraph %}
	<div{{attributes.addClass(classes)}}>
		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% if paragraph.field_body.value == true %}
			<div class="banner-overlay-html-content-description--component {{ BottomBorderClass }}" style="width:{{ ComponentWidth }}px; margin:auto;">
				{{ content.field_body }}
			</div>
		{% endif %}
	</div>
{% endblock paragraph %}