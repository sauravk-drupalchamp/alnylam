
{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}
	<div{{attributes.addClass(classes)}}>
        {% set ComponentWidth = paragraph.field_set_width.value %}
        {% set ComponentBackground = paragraph.field_background_color_code.value %}
		<div id="two-column-card" style="background: {{ComponentBackground}};">
                <div style="width: {{ComponentWidth}}px; margin:auto;">
                    {{content.field_heading_image_description}}
                </div>
		</div>
	</div>
{% endblock paragraph %}

