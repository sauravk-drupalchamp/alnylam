{#
/**
 * @file
 * Default theme implementation to display a paragraph.
 * @see template_preprocess_paragraph()
 *
 * @ingroup themeable
 */
#}

{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    'paragraph-id--' ~ paragraph.id(),
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished',
  ]
%}

{% block paragraph %}

	<div{{attributes.addClass(classes)}}>
		{% set ComponentWidth =  paragraph.field_set_width.value %}
		{% set ComponentBackground =  paragraph.field_background_color_code.value %}

		<div style="background: {{ComponentBackground}}; padding: 64px 0px;">
			<div class="whole-bios-card-section" style="width:{{ ComponentWidth }}px; margin:auto;">
				{% if paragraph.field_heading_1.value %}
					<h2 class="text-align-center">{{content.field_heading_1}}</h2>
				{% endif %}
				
				<div class="bios-card-section" style="overflow: hidden;">{{content.field_bios_card_field}}</div>
			</div>
		</div>

	</div>

{% endblock paragraph %}
